<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingRight="16dp"
        android:paddingBottom="21dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_height="88dp"
            android:layout_width="88dp"
            android:layout_marginRight="21dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="14dp"
    />
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:text="Article title"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textColor="#393535"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:gravity="left|bottom"
            android:layout_toLeftOf="@+id/options"
            android:layout_toRightOf="@+id/logo"
            android:layout_toEndOf="@+id/logo"
    />
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="day.month.year"
            android:textSize="12sp"
            android:textColor="#c1c1c1"
            android:maxLines="1"
            android:layout_below="@+id/options"
            android:layout_toRightOf="@+id/logo"
            android:layout_toEndOf="@+id/logo"
            android:gravity="left|bottom"
    />
    <ImageView
            android:id="@+id/options"
            android:layout_width="40dp"
            android:layout_height="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="31dp"
            android:src="@drawable/ico5"
    />
    <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The quick brown fox jumps over the lazy dog. Pack my box with five dozen liquor jugs. The five boxing wizards jump quickly. How vexingly quick daft zebras jump! The quick brown fox jumps over the lazy dog. Pack my box with five dozen liquor jugs. The five boxing wizards jump quickly. How vexingly quick daft zebras jump!"
            android:textSize="20sp"
            android:textColor="#bbbaba"
            android:maxLines="3"
            android:layout_below="@+id/logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />
    <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:layout_below="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />
</RelativeLayout>